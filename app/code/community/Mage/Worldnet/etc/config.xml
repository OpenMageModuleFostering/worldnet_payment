<config>
    <modules>
        <Mage_Worldnet>
            <version>1.3.0</version>
        </Mage_Worldnet>
    </modules>
    <global>
        <models>
            <worldnet>
                <class>Mage_Worldnet_Model</class>
                <resourceModel>worldnet_mysql4</resourceModel>
            </worldnet>
            <worldnet_mysql4>
                <class>Mage_Worldnet_Model_Mysql4</class>
                <entities>
                    <api_debug><table>worldnet_api_debug</table></api_debug>
                </entities>
            </worldnet_mysql4>
        </models>
        <resources>
            <worldnet_setup>
                <setup>
                    <module>Mage_Worldnet</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </worldnet_setup>
            <worldnet_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </worldnet_write>
            <worldnet_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </worldnet_read>
        </resources>
        <blocks>
            <worldnet><class>Mage_Worldnet_Block</class></worldnet>
        </blocks>
    </global>
    <frontend>
        <secure_url>
            <worldnet_standard>/worldnet/standard</worldnet_standard>
        </secure_url>
        <routers>
            <worldnet>
                <use>standard</use>
                <args>
                    <module>Mage_Worldnet</module>
                    <frontName>worldnet</frontName>
                </args>
            </worldnet>
        </routers>
        <translate>
            <modules>
                <Mage_Worldnet>
                    <files>
                        <default>Mage_Worldnet.csv</default>
                    </files>
                </Mage_Worldnet>
            </modules>
        </translate>
        <layout>
            <updates>
                <worldnet>
                    <file>worldnet.xml</file>
                </worldnet>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Worldnet>
                    <files>
                        <default>Mage_Worldnet.csv</default>
                    </files>
                </Mage_Worldnet>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <worldnet_standard>
                <worldnet_action>Payment</worldnet_action>
                <model>worldnet/standard</model>
		<order_status>pending</order_status>
                <title>WorldNet TPS secure payment page</title>
                <allowspecific>0</allowspecific>
            </worldnet_standard>
        </payment>
    </default>
</config>
